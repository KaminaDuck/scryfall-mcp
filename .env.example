# Neo4j Database Configuration
# URI for connecting to Neo4j instance (e.g., bolt://localhost:7687)
NEO4J_URI=bolt://localhost:7687
# Username for Neo4j authentication
NEO4J_USERNAME=neo4j
# Password for Neo4j authentication
NEO4J_PASSWORD=your-password-here

# Image Storage Configuration
# Directory path where downloaded card images will be stored
# This directory will be created if it doesn't exist
IMAGE_STORAGE_PATH=./images

# Scryfall API Configuration
# Rate limit for API requests (requests per second)
# Scryfall recommends max 10 requests per second
SCRYFALL_RATE_LIMIT=10
# Delay between requests in milliseconds (optional)
SCRYFALL_REQUEST_DELAY=100

# Server Configuration
# Port for the MCP server (optional, defaults to stdio)
# MCP_SERVER_PORT=3000

# Logging Configuration
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Print Configuration
# Directory path where generated print files (PDFs, print sheets) will be stored
PRINT_OUTPUT_PATH=./print
# Minimum DPI threshold for print quality validation (default: 300)
MIN_PRINT_DPI=300
# Default print sheet format (a4_9up, letter_9up, a4_18up)
PRINT_SHEET_FORMAT=a4_9up
# Enable/disable print quality validation checks (default: true)
ENABLE_PRINT_VALIDATION=true

# Proxy Configuration (optional)
# HTTP proxy URL if needed for API requests
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080